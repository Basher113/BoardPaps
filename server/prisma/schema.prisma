generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


/////////////////////////
// ENUMS
/////////////////////////

enum IssuePriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum IssueType {
  TASK
  BUG
  STORY
  EPIC
}

enum ProjectRole {
  OWNER
  ADMIN
  MEMBER
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

/////////////////////////
// MODELS
/////////////////////////

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String

  // For login future google login.
  provider   String   @default("local")
  googleId   String?  @unique

  
  // Storing active refresh tokens of users.
  refreshTokens RefreshToken[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Projects owned by this user
  ownedProjects Project[] @relation("ProjectOwner")

  // Projects where this user is a member
  projectMemberships ProjectMember[]

  // Issues reported and assigned to this user
  reportedIssues Issue[] @relation("ReporterIssues")
  assignedIssues Issue[] @relation("AssignedIssues")

  // Invitations sent by this user
  invitationsSent Invitation[] @relation("InvitedByUser")
}

// RefreshToken model 
model RefreshToken {
  id String  @id @default(cuid())
  token String @unique
  revoked Boolean @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  
  // Session info for session management
  userAgent String?
  ipAddress String?
  
  @@index([userId, revoked, expiresAt])
}

// UserPreferences model for user settings


model Project {
  id        String   @id @default(uuid())
  name      String
  key       String   @unique // e.g. "PROJ"
  ownerId   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastVisitedAt DateTime @default(now())

  // Owner relation
  owner     User            @relation("ProjectOwner", fields: [ownerId], references: [id])

  // Members of this project
  members   ProjectMember[]

  // Columns in this project
  columns   Column[]
  
  // Issues in this project
  issues    Issue[]

  // Invitations for this project
  invitations Invitation[]
}

model ProjectMember {
  id        String   @id @default(uuid())
  role      ProjectRole 

  userId    String
  projectId String

  user      User    @relation(fields: [userId], references: [id])
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId])
}

model Column {
  id        String   @id @default(uuid())
  name      String
  position  Int      // column order in project
  projectId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  issues    Issue[]

  @@unique([projectId, position])
}

model Issue {
  id          String        @id @default(uuid())
  title       String
  description String?
  type        IssueType
  priority    IssuePriority

  position    Int           // order inside column

  projectId   String
  columnId    String
  reporterId  String
  assigneeId  String?

  createdAt   DateTime      @default(now())
  updatedAt   DateTime @updatedAt

  project     Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  column      Column        @relation(fields: [columnId], references: [id], onDelete: Cascade)
  reporter    User          @relation("ReporterIssues", fields: [reporterId], references: [id])
  assignee    User?         @relation("AssignedIssues", fields: [assigneeId], references: [id])

  @@index([columnId])
  @@unique([columnId, position])
}

model Invitation {
  id          String          @id @default(uuid())
  email       String          // Email of invited user
  projectId   String
  role        ProjectRole     // Role to assign upon acceptance
  status      InvitationStatus @default(PENDING)
  invitedById String          // User who sent the invitation

  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  expiresAt   DateTime        // Invitation valid for 7 days by default

  // Relations
  project     Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  invitedBy   User            @relation("InvitedByUser", fields: [invitedById], references: [id])

  @@unique([email, projectId, status]) // Only one pending invite per user per project
  @@index([email])
  @@index([projectId])
}


