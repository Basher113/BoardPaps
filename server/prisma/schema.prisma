generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/////////////////////////
// ENUMS
/////////////////////////

enum IssuePriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum IssueType {
  TASK
  BUG
  STORY
  EPIC
}

enum ProjectRole {
  OWNER
  ADMIN
  MEMBER
}

/////////////////////////
// MODELS
/////////////////////////

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String

  // For login future google login.
  provider   String   @default("local")
  googleId   String?  @unique

  // Storing active refresh tokens of users.
  refreshTokens RefreshToken[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Projects owned by this user
  ownedProjects Project[] @relation("ProjectOwner")

  // Projects where this user is a member
  projectMemberships ProjectMember[]

  // Issues reported and assigned to this user
  reportedIssues Issue[] @relation("ReporterIssues")
  assignedIssues Issue[] @relation("AssignedIssues")
}

// RefreshToken model 
model RefreshToken {
  id String  @id @default(cuid())
  token String @unique
  revoked Boolean @default(false)
  createdAt DateTime @default(now())
  expiresAt DateTime
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
}

model Project {
  id        String   @id @default(uuid())
  name      String
  key       String   @unique // e.g. "PROJ"
  ownerId   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Owner relation
  owner     User            @relation("ProjectOwner", fields: [ownerId], references: [id])

  // Members of this project
  members   ProjectMember[]

  // Boards in this project
  boards    Board[]
}

model ProjectMember {
  id        String   @id @default(uuid())
  role      ProjectRole 

  userId    String
  projectId String

  user      User    @relation(fields: [userId], references: [id])
  project   Project @relation(fields: [projectId], references: [id])

  @@unique([userId, projectId])
}

model Board {
  id        String   @id @default(uuid())
  name      String
  projectId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project   Project @relation(fields: [projectId], references: [id])
  columns   Column[]
  issues    Issue[]
}

model Column {
  id        String   @id @default(uuid())
  name      String
  position  Int      // column order in board
  boardId   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  board     Board   @relation(fields: [boardId], references: [id])
  issues    Issue[]

  @@unique([boardId, position])
}

model Issue {
  id          String        @id @default(uuid())
  title       String
  description String?
  type        IssueType
  priority    IssuePriority

  position    Int           // order inside column

  boardId     String
  columnId    String
  reporterId  String
  assigneeId  String?

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  board       Board         @relation(fields: [boardId], references: [id])
  column      Column        @relation(fields: [columnId], references: [id])
  reporter    User          @relation("ReporterIssues", fields: [reporterId], references: [id])
  assignee    User?         @relation("AssignedIssues", fields: [assigneeId], references: [id])

  @@index([columnId])
  @@unique([columnId, position])
}
